@model TCLEstoque.Models.Movimentacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Transferir ou Remover quantidade do estoque</h1>

<hr />

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovimentacaoID" />
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <select asp-for="EstoqueID" class="form-control" asp-items="@ViewBag.EstoqueID"></select>
                <span asp-validation-for="EstoqueID" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Produto" class="control-label"></label>
                <select asp-for="ProdutoID" class="form-control" asp-items="@ViewBag.ProdutoID"></select>
                <span asp-validation-for="ProdutoID" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
